<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30sp"
    android:layout_marginRight="30sp"
    android:orientation="vertical"
    tools:context=".screen.authentication.login.LoginActivity">

    <ImageView
        android:id="@+id/backLogin"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginTop="30sp"
        android:src="@drawable/arrow_back" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:adjustViewBounds="true"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:fontFamily="@font/nunito_extra_bold_800"
        android:text="@string/login_your_account"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />


    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:background="@drawable/background_edit_text"
        android:drawableStart="@drawable/mail"
        android:drawablePadding="16sp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingLeft="24sp"
        android:paddingTop="8sp"
        android:paddingBottom="8sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_edit_text"
        android:drawableStart="@drawable/password"
        android:drawableEnd="@drawable/hide_pass"
        android:drawablePadding="16sp"
        android:hint="@string/password"
        android:inputType="textEmailAddress"
        android:paddingLeft="24sp"
        android:paddingTop="8sp"
        android:paddingRight="16sp"
        android:paddingBottom="8sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24sp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16sp"
            android:src="@drawable/square" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remember_me"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24sp"
        android:background="@drawable/background_button"
        android:gravity="center"
        android:padding="16sp"
        android:text="@string/sign_in"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textColor="@color/green_c"
        android:text="@string/forgot_the_password" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/do_not_have_an_account_sign_up"
        android:textSize="16dp" />


</LinearLayout>