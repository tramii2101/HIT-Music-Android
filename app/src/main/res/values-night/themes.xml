<resources>
    <!-- Base application theme. -->
    <style name="Theme.HITMusicApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <!--        otp view -->
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="Theme.HITMusicApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HITMusicApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HITMusicApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SCREEN">
        <item name="backgroundColor">#000</item>
    </style>

    <style name="a">
        <item name="android:background">@drawable/button_layout_dark</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="PEN_EDIT_PROFILE">
        <item name="android:src">@drawable/pen_edit_profile_dark</item>
    </style>
    <!--    <color name="b">@color/grey_b</color>-->
    <style name="ab">
        <item name="android:background">@drawable/bottomsheet_dialog_dark</item>
        <item name="color">#000</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="ImageView">
        <item name="tint">@color/white</item>
    </style>

    <style name="BG">
        <item name="android:background">@drawable/circle_while</item>
    </style>

    <style name="LINE">
        <item name="backgroundColor">#FFF</item>
    </style>

    <style name="PEN">
        <item name="android:background">@drawable/bg_pen_dark</item>
    </style>

    <style name="BTN">
        <item name="android:background">@drawable/bg_btn_nav_dark</item>
        <item name="itemIconTint">@color/color_btn_nav_dark</item>
        <item name="itemTextColor">@color/color_btn_nav_dark</item>
    </style>

    <style name="BACK">
        <item name="android:src">@drawable/arrow_back_dark</item>
    </style>
</resources>